{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
